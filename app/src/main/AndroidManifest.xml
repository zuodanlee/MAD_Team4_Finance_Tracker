<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.np.financetracker2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_moneysmartappi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_moneysmartappi_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity" android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TransactionHistoryActivity"
            android:label="History" />
        <activity
            android:name=".ReportActivity"
            android:label="Report" />
        <activity
            android:name=".SettingActivity"
            android:label="Setting" />
        <activity
            android:name=".GoalsActivity"
            android:label="Financial Goals" />
        <activity
            android:name=".SpendActivity"
            android:label="Expenses"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ReceiveActivity"
            android:label="Income"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>